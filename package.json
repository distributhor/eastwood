{
  "name": "wild-west",
  "version": "0.0.2",
  "description": "Thou shalt not util. But this is the wild west.",
  "homepage": "https://distributhor.github.io/wild-west/",
  "license": "MIT",
  "keywords": [
    "typescript javascript util"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/distributhor/wild-west.git"
  },
  "contributors": [
    "WK <distributhor@fastmail.com>"
  ],
  "files": [
    "LICENSE.md",
    "README.md",
    "/dist/wild-west.js",
    "/lib/index.d.ts",
    "/lib/index.d.ts.map",
    "/lib/index.js",
    "/lib/index.js.map",
    "/lib/lang.d.ts",
    "/lib/lang.d.ts.map",
    "/lib/lang.js",
    "/lib/lang.js.map"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib && rimraf dist",
    "build": "yarn clean && tsc && rollup -c rollup.config.js",
    "test": "jest -c test/jest.config.unit.js --passWithNoTests",
    "lint": "yarn lint:check",
    "lint:check": "eslint '{src,test}/**/*.{js,ts,json}'",
    "lint:fix": "eslint --fix '{src,test}/**/*.{js,ts,json}'",
    "lint:format": "yarn prettier:fix",
    "prettier:fix": "prettier --ignore-path .prettierignore --write '{src,test}/**/*.{js,ts,json}'",
    "prettier:check": "prettier --ignore-path .prettierignore --check '{src,test}/**/*.{js,ts,json}'",
    "readme": "node_modules/markdown-include/bin/cli.js md/main.conf.json && node_modules/markdown-include/bin/cli.js md/github.conf.json",
    "typedoc": "typedoc --tsconfig ./tsconfig.json && nodetouch docs/.nojekyll",
    "doc": "yarn readme && yarn typedoc"
  },
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.10",
    "@types/node-cache": "^4.2.5",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.5.3",
    "lint-staged": "^10.4.2",
    "markdown-include": "^0.4.3",
    "np": "^7.0.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.32.1",
    "rollup-plugin-typescript2": "^0.28.0",
    "touch": "^3.1.0",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3",
    "yarn": ">=1.22.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint && yarn test"
    }
  },
  "lint-staged": {
    "*.{js,json,md,ts,tsx}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 120
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.0.0"
  }
}
